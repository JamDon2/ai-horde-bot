{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "ESNext",
        "target": "es2020",
        "allowJs": true,
        "moduleResolution": "nodenext",
        "rootDir": "src",
        "strict": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true
    },
    "include": ["src"]
}
